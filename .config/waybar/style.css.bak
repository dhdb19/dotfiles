window#waybar > box {
    /* border-radius: 8px; */
    border-top-left-radius : 12px;
    border-top-right-radius: 12px;
    border-bottom-left-radius : 0px;
    border-bottom-right-radius: 0px;
    margin: 0px 0px 24px;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0px 8px 8px 1px #101010;
}

#waybar > box  {
    background-color: transparent;
}

tooltip {
  background: rgba(43, 48, 59, 0.5);
  border: 1px solid rgba(100, 114, 125, 0.5);
}
tooltip label {
  color: white;
}

#workspaces button {
    padding: 0px 5px 0px 0px;
    background: transparent;
    color: black;
    border-bottom: 0px solid transparent;
}

#workspaces button.focused {
    background: blue;
    color: blue;
    border-bottom: 10px solid white;
}

#hyprland-workspaces {
    margin: 0px 0px 0px 0px;
    color: blue;
}

#hyprland-workspaces button{
    color: blue;
}


#custom-logo {
    font-size: 18px;
    background-image: url('/home/jordi/.icons/misc/NixOS.svg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: 85%;
    margin: 0px 0px 0px 10px;
}

menu {
    background: white;
    color: black;
    border-radius: 8px;
}

menutimen {
    border-radius: 8px;
}

#hyprland-language {
    color: black;
}

#hyprland-submap {
    color: black;
}

#mode, #clock, #battery {
    padding: 0 10px;
}

#mode {
    background: #64727D;
    border-bottom: 3px solid white;
}

#clock {
    /* background-color: #64727D; */
    color: black;
    margin: 0px 10px 0px 0px;
}

#cpu {
    color: black;
}


#idle_inhibitor {
    color: black;
}

#pulseaudio.output {
    color: blue;
}

#pulseaudio.output button{
    color: blue;
    background: blue;
}

#pulseaudio.input {
    color: black;
}

#memory {
    color: black;
}

#temperature {
    color: black;
}


#backlight {
    color: black;
}

/* #keyboard-state { */
    /* color: black; */
/* } */


#custom-power {
    color: black;
    margin: 0px 10px 0px 0px;
}

#battery {
    background-color: #ffffff;
    color: black;
}

#battery.charging {
    color: white;
    background-color: #26A65B;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    background: #f53c3c;
    color: white;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: steps(12);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}
